<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Florek_CurrencyConverter::css/styles.css" />
        <title>Currency Converter</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Currency Converter</argument>
            </action>
        </referenceBlock>
    </body>
    <referenceContainer name="content">
        <block class="Florek\CurrencyConverter\Block\Base" name="currencyconverter_base" template="Florek_CurrencyConverter::base.phtml" />
    </referenceContainer>
</page>
